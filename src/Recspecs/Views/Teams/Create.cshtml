@model Recspecs.Models.Team

<html>
<head>
    <title>Team - Create</title>
</head>
<body>
    <h2>Create</h2>
    <hr />
    <h4>Add a new team</h4>
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.TeamName)<span>: </span>
        @Html.TextBoxFor(model => model.TeamName)
        <br>
        @Html.LabelFor(model => model.TeamCaptain)<span>: </span>
        @Html.TextBoxFor(model => model.TeamCaptain)
        <br />
        @Html.LabelFor(model => model.DivisionId)
        @Html.DropDownList("DivisionId")
        <input type="submit" value="Add new task" />
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>
</body>
</html>